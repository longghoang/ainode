
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doanh Thu</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/capture.css">
<%- include('partials/header') %>
    <style>
        .truncate {
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 1;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
            padding: 8px;
            border: 1px solid #ddd;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .small-column {
            width: 10%;
        }

        .long-column {
            width: 20%;
        }

        .tiny-column {
            width: 20%;
        }

        .btn-link {
            display: inline-block;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            width: 112px;
            background-color: rgba(233, 36, 36, 0.767);
            text-decoration: none;
            color: white;
            transition: color 0.3s;
        }

        .btn-link:hover {
            color: rgb(208, 255, 0);
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
        }

        .modal-header, .modal-body, .modal-footer {
            padding: 10px;
        }

        .modal-header {
            border-bottom: 1px solid #ddd;
        }

        .modal-title {
            margin: 0;
        }

        .btn-close {
            float: right;
            font-size: 21px;
            font-weight: bold;
            color: #aaa;
        }

        .btn-close:hover, .btn-close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .btn-secondary {
            padding: 10px 20px;
            background-color: #6c757d;
            border: none;
            color: white;
            cursor: pointer;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .text-center {
            text-align: center;
        }

        .back {
            text-decoration: none;
            color: black;
            display: inline-flex;
            align-items: center;
        }

        .mt-4 {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <a href="/" class="back">
        <i class="fas fa-backward" style="margin-right: 5px;"></i>Quay lại
    </a>
    <div class="mt-4">
        <h3>Bài viết của tôi</h3>

        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col" class="small-column">STT</th>
                    <th scope="col" class="long-column">Số lượng xe</th>
                    <th scope="col" class="long-column">Đơn giá</th>
                    <th scope="col" class="tiny-column">Thời gian</th>
                    <th scope="col" class="tiny-column">Tổng doanh thu</th>
                </tr>
            </thead>
            <tbody>
                <% if (faceSchema.length) { %>
                    <% faceSchema.forEach(function(item, index) { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= item.total %> chiếc</td>
                            <td>10 000 VNĐ</td>
                            <td><%= item.date %></td>
                            <td><%= item.price %> VNĐ</td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">Chưa có xe nào được gửi</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <!-- Modal to calculate revenue -->
    <div id="calculate-revenue-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tính doanh thu</h5>
                <span class="btn-close" onclick="document.getElementById('calculate-revenue-modal').style.display='none'">&times;</span>
            </div>
            <div class="modal-body">
                <p>Doanh thu dự kiến</p>
                <table class="table mt-4">
                    <thead>
                        <tr>
                            <th scope="col">Ngày</th>
                            <th scope="col">Doanh thu</th>
                        </tr>
                    </thead>
                    <tbody class="revenue-container"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="document.getElementById('calculate-revenue-modal').style.display='none'">Đóng</button>
            </div>
        </div>
    </div>

    <!-- Script to calculate revenue without deleting the blog post -->
    <form name="calculate-revenue-form" method="POST"></form>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        var blogsId;
        var calculateForm = document.forms['calculate-revenue-form'];
        var btnCalculateRevenue = document.getElementById("btn-calculate-revenue");

        $(document).ready(function() {
            $('#calculate-revenue-modal').on('show.bs.modal', function(event) {
                var button = $(event.relatedTarget);
                blogsId = button.data('id');
            });

            btnCalculateRevenue.onclick = function() {
                var total = parseInt($('tr').eq(0).find('td').eq(1).text().trim());
                var price = 10000; 
                var revenue = total * price;

                var date = "<%= currentDate %>";
                var revenueTable = `
                    <tr>
                        <td>${date}</td>
                        <td>${revenue}</td>
                    </tr>
                `;

                $('.revenue-container').html(revenueTable);

                // Prevent form submission
                return false;
            };
        });
    </script>
</body>
</html>
